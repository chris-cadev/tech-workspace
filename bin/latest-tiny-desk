#!/bin/bash

CWD=$(dirname "$(realpath "$0"))")
if [[ "$(uname)" == "Darwin" ]]; then
    # macOS/BSD systems
    DATE_AFTER=$(date -v -1w +%Y%m%d)
else
    # Linux systems
    DATE_AFTER=$(date -d '1 week ago' +%Y%m%d)
fi

$CWD/play-latest-video-from https://www.youtube.com/@nprmusic --date-after $DATE_AFTER &